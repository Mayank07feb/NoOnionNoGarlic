    <script src="https://cdn.jsdelivr.net/npm/lightgallery@2.7.2/plugins/zoom/lg-zoom.umd.min.js"></script>

    <script>
        let galleryInstance = null;
        let currentImageIndex = 0;
        let totalImages = 0;

        function navigateGallery(direction) {
            const galleryItems = document.querySelectorAll('.gallery-item');
            galleryItems[currentImageIndex].classList.add('hidden');

            currentImageIndex = (currentImageIndex + direction + totalImages) % totalImages;

            galleryItems[currentImageIndex].classList.remove('hidden');

            // Update counter
            document.getElementById('currentImage').textContent = currentImageIndex + 1;
        }

        function openModal(title, price, desc, images) {
            document.getElementById('modalTitle').innerText = title;
            document.getElementById('modalPrice').innerText = price;
            document.getElementById('modalDesc').innerText = desc;

            const galleryContainer = document.getElementById('productGallery');
            galleryContainer.innerHTML = '';

            currentImageIndex = 0;
            totalImages = images.length;

            images.forEach((imgSrc, index) => {
                const a = document.createElement('a');
                a.href = imgSrc;
                a.className = 'gallery-item' + (index === 0 ? '' : ' hidden');
                a.setAttribute('data-index', index);
                const img = document.createElement('img');
                img.src = imgSrc;
                img.className = 'w-full h-auto rounded-xl cursor-pointer max-h-96 object-contain';
                a.appendChild(img);
                galleryContainer.appendChild(a);
            });

            // Show/hide navigation arrows based on number of images
            const prevArrow = document.getElementById('prevArrow');
            const nextArrow = document.getElementById('nextArrow');
            const counter = document.getElementById('imageCounter');

            if (images.length > 1) {
                prevArrow.classList.remove('hidden');
                nextArrow.classList.remove('hidden');
                counter.classList.remove('hidden');
                document.getElementById('totalImagesCount').textContent = totalImages;
                document.getElementById('currentImage').textContent = 1;
            } else {
                prevArrow.classList.add('hidden');
                nextArrow.classList.add('hidden');
                counter.classList.add('hidden');
            }

            document.getElementById('productModal').classList.remove('hidden');

            if (galleryInstance) galleryInstance.destroy();
            galleryInstance = lightGallery(galleryContainer, {
                selector: '.gallery-item',
                plugins: [lgZoom, lgThumbnail],
                download: false,
                speed: 500,
                controls: true,
                zoom: true,
                thumbnail: true,
                closable: true,            // ✅ Ensure modal can be closed
                mobileSettings: {
                    controls: true,        // ✅ Show arrows on mobile
                    showCloseIcon: true,   // ✅ Force show close icon
                    download: false,
                    rotate: false
                }
            });
        }

        function closeModal() {
            document.getElementById('productModal').classList.add('hidden');
            if (galleryInstance) {
                galleryInstance.destroy();
                galleryInstance = null;
            }
        }

        // Close modal on outside click
        document.getElementById('productModal').addEventListener('click', function (e) {
            if (e.target === this) {
                closeModal();
            }
        });

        // Close modal on Escape key
        document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape') {
                closeModal();
            }
        });
    </script>

