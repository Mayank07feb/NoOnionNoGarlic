<section class="min-h-screen flex items-center justify-center bg-orange-50 md:ml-64 pt-16 md:pt-0 px-4 sm:px-6 md:px-10 font-open-sans">
  <div class="w-full max-w-4xl bg-white p-6 sm:p-8 md:p-10 rounded-3xl shadow-2xl">

    <!-- Section Title -->
    <h2 class="text-2xl sm:text-3xl md:text-4xl font-montserrat font-bold text-center text-gray-900 mb-8">Settings</h2>

    <!-- Settings Form -->
    <form action="/settings" method="POST" class="space-y-6">

      <!-- Row 1: Full Name + Email -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
        <div>
          <label class="block text-gray-800 font-semibold mb-2">Full Name</label>
          <input type="text" name="name" value="John Doe"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none text-sm sm:text-base" />
        </div>
        <div>
          <label class="block text-gray-800 font-semibold mb-2">Email</label>
          <input type="email" name="email" value="johndoe@example.com"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none text-sm sm:text-base" />
        </div>
      </div>

      <!-- Row 2: Phone + Date of Birth -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
        <div>
          <label class="block text-gray-800 font-semibold mb-2">Phone</label>
          <input type="text" name="phone" value="+91 94128 92908"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none text-sm sm:text-base" />
        </div>
        <div>
          <label class="block text-gray-800 font-semibold mb-2">Date of Birth</label>
          <input type="date" name="dob" value="2000-04-15"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none text-sm sm:text-base" />
        </div>
      </div>

      <!-- Row 3: Gender + Address -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
        <div>
          <label class="block text-gray-800 font-semibold mb-2">Gender</label>
          <select name="gender"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none text-sm sm:text-base">
            <option selected>Male</option>
            <option>Female</option>
            <option>Other</option>
          </select>
        </div>
        <div>
          <label class="block text-gray-800 font-semibold mb-2">Address</label>
          <input type="text" name="address" value="123, ABC Street, Agra, Uttar Pradesh, India"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none text-sm sm:text-base" />
        </div>
      </div>

      <!-- Update Settings Button -->
      <button type="submit"
        class="w-full py-3 sm:py-4 bg-primary text-white rounded-xl shadow-lg hover:shadow-xl hover:bg-primary-hover transition-all duration-300 font-semibold text-sm sm:text-base">
        Update Settings
      </button>

    </form>

    <!-- Change Password Form -->
    <div id="change-password" class="mt-10 sm:mt-12 border-t pt-8 sm:pt-10">
      <h3 class="text-xl sm:text-2xl md:text-3xl font-montserrat font-bold text-gray-900 mb-6 text-center">Change Password</h3>
      <form class="space-y-4 sm:space-y-6 max-w-lg mx-auto">

        <!-- Current Password -->
        <div>
          <label for="current-password" class="block text-gray-700 text-sm sm:text-base font-medium mb-1">Current Password</label>
          <input type="password" id="current-password" name="current-password"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none text-sm sm:text-base">
        </div>

        <!-- New Password -->
        <div>
          <label for="new-password" class="block text-gray-700 text-sm sm:text-base font-medium mb-1">New Password</label>
          <input type="password" id="new-password" name="new-password"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none text-sm sm:text-base">
        </div>

        <!-- Confirm New Password -->
        <div>
          <label for="confirm-password" class="block text-gray-700 text-sm sm:text-base font-medium mb-1">Confirm New Password</label>
          <input type="password" id="confirm-password" name="confirm-password"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none text-sm sm:text-base">
        </div>

        <!-- Update Password Button -->
        <button type="submit"
          class="w-full px-6 py-3 sm:py-3 bg-primary text-white rounded-xl hover:bg-primary-hover transition font-semibold text-sm sm:text-base">
          Update Password
        </button>

      </form>
    </div>

  </div>
</section>
