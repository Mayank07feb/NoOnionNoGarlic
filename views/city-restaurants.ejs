  }
  .badge-gold { background: #D4AF37; }
  .badge-silver { background: #C0C0C0; }
  .badge-bronze { background: #CD7F32; }

  /* Tooltip */
  .tooltip {
    position: absolute;
    top: -36px;
    right: 0;
    background: #000;
    color: #fff;
    padding: 6px 10px;
    font-size: 11px;
    border-radius: 4px;
    opacity: 0;
    visibility: hidden;
    white-space: nowrap;
    transition: all 0.2s ease;
    z-index: 999;
  }

  .badge:hover .tooltip {
    opacity: 1;
    visibility: visible;
    transform: translateY(-4px);
  }

  /* Card fix (important) */
  .restaurant-card {
    overflow: visible !important;
    position: relative;
  }
</style>

