<!-- Google Material Icons -->
<link href="https://fonts.googleapis.com/css2?family=Material+Icons+Outlined" rel="stylesheet">

<style>
  /* Make sure the card container allows the tooltip to escape and is a positioning context */
  .restaurant-card {
    position: relative;   /* positioning context for absolute badge */
    overflow: visible;    /* IMPORTANT: allow tooltip to display outside the card */
  }

  /* Badge (kept absolute so it's placed inside the card) */
  .badge {
    position: absolute;
    top: 12px;
    left: 12px;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 600;
    cursor: pointer;
    z-index: 40; /* ensure badge and tooltip stack above card content */
  }

  .badge svg {
    width: 18px;
    height: 18px;
  }

  /* Colors */
  .badge-gold {
    background: #FFF6D3;
    color: #B8860B;
    border: 1px solid #e8c878;
  }
  .badge-silver {
    background: #F0F0F5;
    color: #6B7280;
    border: 1px solid #d4d4d8;
  }
  .badge-bronze {
    background: #F3E4D3;
    color: #A97142;
    border: 1px solid #d1b08a;
  }

  /* Tooltip base (hidden by default) */
  .badge::after {
    content: attr(data-tooltip);
    position: absolute;
    /* place above the badge and center it horizontally */
    bottom: calc(100% + 10px); /* 10px gap above the badge */
    left: 50%;
    transform: translateX(-50%) translateY(6px);
    background: rgba(0,0,0,0.9);
    color: #fff;
    padding: 6px 10px;
    border-radius: 6px;
    font-size: 12px;
    white-space: nowrap;
    opacity: 0;
    transition: opacity 180ms ease, transform 180ms ease;
    z-index: 50;
    pointer-events: none;
  }

  /* small arrow under tooltip */
  .badge::before {
    content: "";
    position: absolute;
    bottom: calc(100% + 2px);
    left: 50%;
    transform: translateX(-50%) rotate(45deg);
    width: 10px;
    height: 10px;
    background: rgba(0,0,0,0.9);
    opacity: 0;
    transition: opacity 180ms ease;
    z-index: 49;
    pointer-events: none;
  }

  /* show on hover & focus (keyboard accessible) */
  .badge:hover::after,
  .badge:focus::after,
  .badge[aria-expanded="true"]::after {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
  .badge:hover::before,
  .badge:focus::before,
  .badge[aria-expanded="true"]::before {
    opacity: 1;
  }

  /* visible when using keyboard focus */
  .badge:focus {
    outline: 2px solid rgba(66,153,225,0.25);
    outline-offset: 2px;
  }
</style>




