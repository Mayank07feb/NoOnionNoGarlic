  <div class="absolute bottom-6 left-1/2 transform -translate-x-1/2 flex gap-3 z-20">
    <button onclick="goToSlide(0)" class="indicator w-3 h-3 rounded-full bg-primary transition-all"></button>
    <button onclick="goToSlide(1)"
      class="indicator w-3 h-3 rounded-full bg-primary bg-opacity-50 transition-all"></button>
    <button onclick="goToSlide(2)"
      class="indicator w-3 h-3 rounded-full bg-primary bg-opacity-50 transition-all"></button>
  </div>
