<script>
/* ---------- DATA ---------- */
const data = {
  "Breakfast And Brunch": {
    icon: "restaurant_menu",
    subcategories: {
      "Aloo Tikki": {
        products: [
          { name: "Frozen Aloo Tikki Pack", url: "#" },
          { name: "Ready-to-Fry Aloo Tikki", url: "#" }
        ],
        recipes: [
          { name: "Aloo Tikki Recipe Video", url: "https://www.youtube.com/watch?v=xN00xQOgd-Y" }
        ]
      },
      "Cheese Balls": {
        products: [
          { name: "Cheese Garlic Puffs", url: "#" }
        ],
        recipes: [
          { name: "Homemade Cheese Balls", url: "#" }
        ]
      }
    }
  },

  "Starters And Appetizers": {
    icon: "lunch_dining",
    subcategories: {
      "Paneer Tikka": {
        products: [{ name: "Paneer Tikka Mix", url: "#" }],
        recipes: [{ name: "Restaurant Style Paneer", url: "#" }]
      }
    }
  }
};

/* ---------- ELEMENTS & TIMERS ---------- */
const dropdown = document.getElementById('suggestionsDropdown');
const input = document.getElementById('searchInput');
const btn = document.getElementById('searchButton');

let globalHideTimer = null;
const HIDE_DELAY = 800; // ms before closing when mouse leaves entire dropdown

/* Utility to clear global hide timer */
function clearGlobalTimer() {
  if (globalHideTimer) { clearTimeout(globalHideTimer); globalHideTimer = null; }
}

/* ---------- RENDER ---------- */
function render(filter = '') {
  dropdown.innerHTML = '';
  dropdown.setAttribute('aria-hidden', 'false');

  Object.keys(data).forEach(cat => {
    if (filter && !cat.toLowerCase().includes(filter.toLowerCase())) return;

    const catObj = data[cat];
    const catEl = document.createElement('div');
    catEl.className = 'category-item';
    catEl.innerHTML = `
      <div style="display:flex;align-items:center;gap:10px;">
        <span class="material-icons-outlined">${catObj.icon}</span>
        <strong style="text-align:left;">${cat}</strong>
      </div>
      <span class="material-icons-outlined">chevron_right</span>
    `;

    const subMenu = document.createElement('div');
    subMenu.className = 'subcategory-dropdown';

    /* per-submenu hide timer */
    let subHideTimer = null;

    Object.keys(catObj.subcategories).forEach(sub => {
      const subObj = catObj.subcategories[sub];
      const subEl = document.createElement('div');
      subEl.className = 'subcategory-item';
      subEl.innerHTML = `
        <span style="flex:1;text-align:left;">${sub}</span>
        <span class="material-icons-outlined">chevron_right</span>
      `;

      const details = document.createElement('div');
      details.className = 'details-panel';

      // Build details content
      if (subObj.products?.length) {
        const html = `
          <div class="details-section">
            <div class="details-header">Products</div>
            ${subObj.products.map(p => `
              <div class="detail-item"><a href="${p.url}" target="_blank"><span class="material-icons-outlined">shopping_bag</span>${p.name}</a></div>
            `).join('')}
          </div>
        `;
        details.innerHTML += html;
      }
      if (subObj.recipes?.length) {
        const html = `
          <div class="details-section">
            <div class="details-header">Recipes</div>
            ${subObj.recipes.map(r => `
              <div class="detail-item"><a href="${r.url}" target="_blank"><span class="material-icons-outlined">menu_book</span>${r.name}</a></div>
            `).join('')}
          </div>
        `;
        details.innerHTML += html;
      }

      /* --- Sub element mouse handling (keeps panels open while moving) --- */
      subEl.addEventListener('mouseenter', () => {
        // cancel hiding timers
        clearGlobalTimer();
        if (subHideTimer) { clearTimeout(subHideTimer); subHideTimer = null; }
        // open this sub and details
        subEl.classList.add('open');
        subMenu.classList.add('open');
        details.classList.add('open');
      });

      subEl.addEventListener('mouseleave', (e) => {
        // start timer to remove open styles unless entering details
        subHideTimer = setTimeout(() => {
          subEl.classList.remove('open');
          details.classList.remove('open');
          // if mouse left submenu entirely, may hide subMenu after short delay
        }, 200);
      });

      // ensure details itself keeps open while hovered
      details.addEventListener('mouseenter', () => {
        clearGlobalTimer();
        if (subHideTimer) { clearTimeout(subHideTimer); subHideTimer = null; }
        subEl.classList.add('open');
        details.classList.add('open');
      });
      details.addEventListener('mouseleave', () => {
        subHideTimer = setTimeout(() => {
          subEl.classList.remove('open');
          details.classList.remove('open');
        }, 200);
      });

      subEl.appendChild(details);
      subMenu.appendChild(subEl);
    });

    /* --- Category hover behavior (open subMenu) --- */
    catEl.addEventListener('mouseenter', () => {
      clearGlobalTimer();
      catEl.classList.add('open');
      subMenu.classList.add('open');
      // ensure dropdown stays visible
      dropdown.classList.add('active');
    });

    catEl.addEventListener('mouseleave', () => {
      // small delay to allow entering submenu or details
      setTimeout(() => {
        // if pointer not inside submenu or details, close this cat
        const hovered = document.querySelector(':hover');
        // if the hover chain doesn't include subMenu or details, close cat
        if (!Array.from(hovered || []).some(el => el && (el === subMenu || subMenu.contains(el)))) {
          catEl.classList.remove('open');
          // keep subMenu open state removal handled by sub timers
        }
      }, 150);
    });

    /* ensure subMenu itself cancels global hide if hovered */
    subMenu.addEventListener('mouseenter', () => {
      clearGlobalTimer();
      subMenu.classList.add('open');
    });
    subMenu.addEventListener('mouseleave', () => {
      // small delay: close subMenu unless pointer moved to details or category
      setTimeout(() => {
        const hovered = document.querySelector(':hover');
        if (!hovered || (!subMenu.contains(hovered) && !catEl.contains(hovered))) {
          subMenu.classList.remove('open');
        }
      }, 200);
    });

    catEl.appendChild(subMenu);
    dropdown.appendChild(catEl);
  });

  /* attach top-level hover handlers to dropdown to control global hide timer */
  dropdown.addEventListener('mouseenter', () => clearGlobalTimer());
  dropdown.addEventListener('mouseleave', () => {
    clearGlobalTimer();
    globalHideTimer = setTimeout(() => {
      dropdown.classList.remove('active');
      // clear all open classes
      dropdown.querySelectorAll('.open').forEach(n => n.classList.remove('open'));
    }, HIDE_DELAY);
  });
}

/* ---------- UI hooks ---------- */
btn.addEventListener('click', (e) => {
  e.stopPropagation();
  clearGlobalTimer();
  if (!dropdown.classList.contains('active')) {
    render();
    dropdown.classList.add('active');
  } else {
    dropdown.classList.remove('active');
  }
});

/* live filtering while typing */
input.addEventListener('input', (e) => {
  const v = e.target.value || '';
  if (!dropdown.classList.contains('active')) {
    render(v);
    dropdown.classList.add('active');
  } else {
    render(v);
  }
});

/* clicking outside closes menu (but not immediate while inside dropdown) */
document.addEventListener('click', (e) => {
  if (!e.target.closest('.search-wrapper') && !e.target.closest('.premium-btn')) {
    // start hide timer immediately
    clearGlobalTimer();
    globalHideTimer = setTimeout(() => {
      dropdown.classList.remove('active');
      dropdown.querySelectorAll('.open').forEach(n => n.classList.remove('open'));
    }, 100); // short delay on outside click
  }
});

/* ensure keyboard focus keeps dropdown open */
input.addEventListener('focus', () => {
  clearGlobalTimer();
  if (!dropdown.classList.contains('active')) {
    render();
    dropdown.classList.add('active');
  }
});
input.addEventListener('blur', () => {
  // small delay to allow focus to move to menu if user tabs there
  clearGlobalTimer();
  globalHideTimer = setTimeout(() => {
    if (!document.activeElement || !dropdown.contains(document.activeElement)) {
      dropdown.classList.remove('active');
      dropdown.querySelectorAll('.open').forEach(n => n.classList.remove('open'));
    }
  }, 300);
});
</script>






