<script>
  let currentSlide = 0;
  const slides = document.querySelectorAll('.slide');
  const indicators = document.querySelectorAll('.indicator');

  function showSlide(n) {
    slides[currentSlide].classList.remove('active');
    indicators[currentSlide].classList.remove('bg-primary');
    indicators[currentSlide].classList.add('bg-opacity-50');

    currentSlide = (n + slides.length) % slides.length;

    slides[currentSlide].classList.add('active');
    indicators[currentSlide].classList.add('bg-primary');
    indicators[currentSlide].classList.remove('bg-opacity-50');
  }

  function changeSlide(direction) {
    showSlide(currentSlide + direction);
  }

  function goToSlide(n) {
    showSlide(n);
  }

  setInterval(() => changeSlide(1), 5000);
</script>

